<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nhborder_loading"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="6dp">

    <ProgressBar
        android:id="@+id/loading_gif"
        android:layout_width="wrap_content"
        android:indeterminateTint="@color/gradient_start"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/material_size_12" />

    <TextView
        android:visibility="visible"
        android:id="@+id/load_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loading_gif"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/setpoppins_medium"
        android:gravity="center"
        android:includeFontPadding="true"
        android:maxLines="1"
        android:textColor="@color/grey1"
        android:textSize="16sp"
        tools:text="Loading..Please Wait" />


</RelativeLayout>