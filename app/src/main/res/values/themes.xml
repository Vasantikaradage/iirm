<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MB360" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gradient_start</item>
        <item name="colorPrimaryVariant">@color/gradient_start</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gradient_start</item>
        <item name="colorSecondaryVariant">@color/gradient_start</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/icon_color</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="homeAsUpIndicator">@drawable/back</item>

    </style>


    <style name="Theme.MB360.wellness" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greenlightbg2</item>
        <item name="colorPrimaryVariant">@color/greenlightbg2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/greenlightbg2</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>

    </style>

    <!--For splash screen!-->
    <style name="Theme.MB360.Starting" parent="Theme.MB360">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/white</item>
        <item name="android:windowSplashscreenContent">@drawable/content_splash</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="postSplashScreenTheme">@style/Theme.MB360</item>
    </style>

    <style name="Theme.MB360.Login" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@color/second_variant_blue</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
    </style>

    <!-- for the rounded spinner with dialogue! -->
    <style name="SpinnerTheme2">
        <item name="android:background">@drawable/spinnerbackground</item>
        <item name="android:popupBackground">@drawable/nhborder</item>
        <item name="android:fontFamily">@font/setpoppins</item>
    </style>

    <style name="SpinnerTheme3">
        <item name="android:background">@drawable/queryborder</item>
        <item name="android:popupBackground">@drawable/nhborder</item>
        <item name="android:fontFamily">@font/setpoppins</item>
    </style>

    <style name="App_font">
        <item name="android:fontFamily">@font/setpoppinssemibold</item>
    </style>

    <style name="App_font_toolBar">
        <item name="android:fontFamily">@font/setpoppins_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tabTextAppearance" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="hintTextColor">@color/cpb_black</item>
        <item name="background">@color/white</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="counterTextAppearance">@style/App_font</item>
        <item name="android:fontFamily">@font/setpoppins</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>


    <style name="BottomNavigationViewTextStyle" parent="Theme.MaterialComponents">
        <item name="android:fontFamily">@font/setpoppins</item>
        <item name="android:textColor">@color/gradient_start</item>
    </style>

    <style name="BottomNavigationViewTextStyleInactive" parent="Theme.MaterialComponents">
        <item name="android:fontFamily">@font/setpoppins</item>
        <item name="android:textColor">@color/grey1</item>
    </style>

    <style name="Theme.MB360.fitness" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellowdarkbg</item>
        <item name="colorPrimaryVariant">@color/yellowdarkbg</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellowlightbg</item>
        <item name="colorSecondaryVariant">@color/yellowlightbg</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/yellowdarkbg</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>

    </style>

    <style name="Theme.MB360.error" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="Widget.App.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorPrimaryInverse">@color/white</item>
        <item name="colorOnSurfaceInverse">@color/error_text_snack_bar</item>
    </style>

</resources>